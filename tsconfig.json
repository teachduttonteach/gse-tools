{
    "compilerOptions": {
      "target": "ES2019",
      "outDir": "./built",
      "noImplicitAny": true,
      "strictNullChecks": true,
      "declaration": true
    },
    "include": [
      "./src/**/*"
    ],
    "exclude": ["node_modules", "**/__tests__/*"],
    "typedocOptions": {
      "readme": "./README.md",
      "out": "docs",
      "includes": "src",
      "mode": "file",
      "exclude": "**/*.test.ts",
      "excludeProtected": true
    }
}