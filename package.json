{
  "name": "gse-tools",
  "version": "0.2.0",
  "description": "Tools for easier manipulation of Google Apps Script",
  "main": "Code.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
